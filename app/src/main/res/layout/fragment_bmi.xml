<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@id/main_layout"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0">

        <LinearLayout
            android:orientation="vertical"
            android:padding="20.0dip"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="8.0dip"
                    android:layout_weight="1.0">

                    <TextView
                        android:textSize="13.0sp"
                        android:textColor="#d43636"
                        android:id="@id/textViewBmiHeight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Height (Feet)" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="4.0dip"
                            android:layout_weight="1.0">


                            <EditText
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#333232"
                                android:textColorHint="#918383"
                                android:ems="10"
                                android:layout_marginTop="8.0dip"
                                android:maxLines="1"
                                android:maxLength="11"
                                android:hint="Enter Your Height"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:inputType="number|numberDecimal"
                                android:id="@+id/height"/>

                            <View
                                android:background="#fff"
                                android:layout_width="fill_parent"
                                android:layout_height="1.0dip"
                                android:layout_marginTop="8.0dip"
                                android:layout_marginBottom="16.0dip" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8.0dip"
                    android:layout_weight="1.0">
                    <TextView
                        android:textSize="13.0sp"
                        android:textColor="#e74141"
                        android:id="@id/textViewBmiWeight"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Weight (Kg)" />

                    <EditText
                        android:textColor="#2b2929"
                        android:textColorHint="#918383"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:ems="10"
                        android:maxLines="1"
                        android:maxLength="11"
                        android:layout_marginTop="8.0dip"
                        android:hint="Enter Your Weight"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:inputType="number|numberDecimal"
                        android:id="@+id/weight"/>
                    <View
                        android:background="#fff"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginTop="8.0dip"
                        android:layout_marginBottom="16.0dip" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_marginRight="15.0dp"
                android:layout_marginLeft="15.0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#151515"
                android:padding="12.0dip"
                android:background="@drawable/background_button"
                android:id="@+id/calculate"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#277307"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:id="@+id/result"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>