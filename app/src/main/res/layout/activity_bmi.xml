<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BmiActivity">

    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@id/toolbar"
        android:background="#336fcf"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="?actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="clickBack"
                android:src="@drawable/ic_arrow_back_black_24dp" />


            <TextView
                android:textSize="18.0sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Bmi Calculator"
                android:layout_weight="10"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="8.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@id/textViewBmiHeight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Height"
                android:textColor="@color/redLight"
                android:textSize="13.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="4.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@id/editTextHeightFeet"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:background="@null"
                        android:drawableRight="@drawable/icon_arrow_down"
                        android:hint="Feet"
                        android:inputType="none"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="#2e2c2c"
                        android:textColorHint="#646262"
                        android:textSize="14.0sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginTop="8.0dip"
                        android:background="#bcb8b8" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="4.0dip"
                    android:layout_weight="1.0"
                    android:orientation="vertical">

                    <EditText
                        android:id="@id/editTextHeightInches"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.0dip"
                        android:background="@null"
                        android:drawableRight="@drawable/icon_arrow_down"
                        android:hint="Inches"
                        android:inputType="none"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="#2e2c2c"
                        android:textColorHint="#646262"
                        android:textSize="14.0sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginBottom="16.0dip"
                        android:layout_marginTop="8.0dip"
                        android:background="#bcb8b8" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="8.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@id/textViewBmiWeight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Weight (Kg)"
                android:textColor="@color/redLight"
                android:textSize="13.0sp" />

            <EditText
                android:id="@id/editTextWeightKg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:background="@null"
                android:hint="Type your weight"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="#2e2c2c"
                android:textColorHint="#646262"
                android:textSize="14.0sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_marginBottom="16.0dip"
                android:layout_marginTop="8.0dip"
                android:background="#bcb8b8" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/lLayoutCalculateBodymi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8.0dip"
        android:layout_marginLeft="40.0dip"
        android:layout_marginRight="40.0dip"
        android:layout_marginTop="16.0dip"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12.0dip">

        <TextView
            android:id="@id/textViewBmiCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:gravity="center"
            android:text="CALCULATE"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="16.0sp" />
    </LinearLayout>

</LinearLayout>